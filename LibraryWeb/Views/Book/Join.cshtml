@model Members
<form method="post">
    <div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2>Add</h2>
        <hr />
        <div class="mb-3">
            <label class="text-white" asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Add</button>
        <a asp-controller="Book" asp-action="Members" class="btn btn-secondary" style="width:150px">Back</a>
    </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
