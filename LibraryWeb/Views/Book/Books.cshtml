@model IEnumerable<Books>
@{
    ViewData["Title"] = "Books";
}
@if(TempData["success"] != null)
{
    <h2>@TempData["success"]</h2>
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Book List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Book" asp-action="Create" class="btn btn-primary">
                Add New Book
            </a>
            <a asp-controller="Book" asp-action="Issue" class="btn btn-primary">
                Issue Book
            </a>
        </div>
    </div>


<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Title
            </th>
            <th>
               Author
            </th>
            <th>
                Price
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="20%">
                    @obj.ID
                </td>
                <td width="40%">
                    @obj.Title
                </td>
                <td width="30%">
                    @obj.Author
                </td>
                <td width="20%">
                    @obj.Price
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Book" asp-action="Edit" asp-route-id="@obj.ID"
                            class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="Book" asp-action="Delete" asp-route-id="@obj.ID"
                        class="btn btn-primary mx-2"><i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>