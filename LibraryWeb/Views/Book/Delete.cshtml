@model Books
<form method="post" asp-action="DeletePOST">
    <input asp-for="ID" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete</h2>
            <hr />
            </div>
           
            <div class="mb-3">
                <label class="text-white" asp-for="Title"></label>
                <input asp-for="Title" disabled class="form-control" />
               
            </div>
            <div class="mb-3">
                <label class="text-white" asp-for="Author"></label>
                <input asp-for="Author" disabled class="form-control" />
              
            </div>
            <div class="mb-3">
                <label class="text-white" asp-for="Price"></label>
                <input asp-for="Price" disabled class="form-control" />
                
            </div>
            <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
            <a asp-controller="Book" asp-action="Books" class="btn btn-secondary" style="width:150px">
                Back
            </a>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
