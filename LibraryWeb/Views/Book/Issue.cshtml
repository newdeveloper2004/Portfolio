@model LentBooks
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Issue Book</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label class="text-white" asp-for="Id"></label>
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="text-white" asp-for="Member_Id"></label>
            <input asp-for="Member_Id" class="form-control" />
            <span asp-validation-for="Member_Id" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Issue</button>
        <a asp-controller="Book" asp-action="Lent" class="btn btn-secondary" style="width:150px">
            Back
        </a>
    </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
